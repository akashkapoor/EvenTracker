extends layout

block content
  h1=title
  p Welcome to #{title}
  .bs-example(data-example-id='thumbnails-with-custom-content')
    .row
      for story in stories  
        .col-sm-3.col-md-2
          .thumbnail
            img(data-src='holder.js/100%x200', alt='100%x200', src='http://img1.findthebest.com/sites/default/files/2307/media/images/Light_Gray_429810_i0.png', data-holder-rendered='true', style='height: 306px; width: 306px; display: block;')
            |           
            .caption
              h3#thumbnail-label
                | #{story.name}
                a.anchorjs-link(href='#thumbnail-label')
                  span.anchorjs-icon
              |             
              p
                | @
              |             
              p
                a.btn.btn-primary(href='#', role='button') Gallery
                |  
                a.btn.btn-default(href='#', role='button') Map
        |       