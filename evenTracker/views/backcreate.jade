extends layout

block content
  form(action="/create/process").form-horizontal(align="left")
    fieldset
        // Form Name
        legend Create a new story
        // Text input
        .control-group
          label.control-label(for='name') Story Name
          |   
          .controls
            input#name.input-xlarge(name='name', type='text', placeholder='Story Name')
        // Appended Input
        .control-group
          label.control-label(for='tag1') Tags
          |   
          .controls
            .input-append
              input#tag1.input-xlarge(name='tag1', placeholder='Tag 1', type='text')
              |       
              span.add-on OR
        // Appended Input
        .control-group
          label.control-label(for='tag2')
          |   
          .controls
            .input-append
              input#tag2.input-xlarge(name='tag2', placeholder='Tag2', type='text')
              |       
              span.add-on OR
        // Text input
        .control-group
          label.control-label(for='start') Start Time
          |   
          .controls
            input#start.input-xlarge(name='start', type='text', placeholder='Start Time')
        // Text input
        .control-group
          label.control-label(for='End') End Time
          |   
          .controls
            input#end.input-xlarge(name='end', type='text', placeholder='End Time')
        // Text input
        .control-group
          label.control-label(for='lat') Location
          |   
          .controls
            input#lat.input-xlarge(name='lat', type='text', placeholder='Latitude')
        // Text input
        .control-group
          label.control-label(for='lon')
          |   
          .controls
            input#lon.input-xlarge(name='lon', type='text', placeholder='Longitude')
        // Text input
        .control-group
          label.control-label(for='dist')
          |   
          .controls
            input#dist.input-xlarge(name='dist', type='text', placeholder='Distance in *')
        // Button
        .control-group
          label.control-label(for='submit')
          |   
          .controls
            button#submit.btn.btn-primary(name='submit') Create

