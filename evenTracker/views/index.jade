extends layout

block content
  .bs-example(data-example-id='thumbnails-with-custom-content')
    .row
      for story in stories  
        .col-sm-3.col-md-2
          .thumbnail
            img(data-src='holder.js/100%x200', alt='100%x200', src='#{story.tags[0].images[0].url}', data-holder-rendered='true', style='height: 306px; width: 306px; display: block;')
            |           
            .caption
              h3#thumbnail-label
                | #{story.name}
                a.anchorjs-link(href='#thumbnail-label')
                  span.anchorjs-icon
              |             
              for tag in story.tags
                p #{tag.name}
              |             
              p
                a.btn.btn-primary(href='/viewStory?name='+'#{story.name}', role='button') Gallery
                |  
                a.btn.btn-default(href='/viewStory/map?name='+'#{story.name}', role='button') Map
        |       